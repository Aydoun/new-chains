generator client {
  provider   = "prisma-client"
  output     = "../lib/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int        @id @default(autoincrement())
  username  String
  email     String     @unique
  avatarUrl String?
  role      Role       @default(USER)
  bio       String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  contacts  Contact[]
  Sequences Sequence[]
  stories   Story[]
  snippets  Snippet[]
}

model Sequence {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  url         String?
  userId      Int
  FrameOrder  Int[]
  visibility  Visibility @default(PUBLIC)
  isDeleted   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id])

  @@index([title, userId])
}

model Frame {
  id            Int       @id @default(autoincrement())
  type          FrameType @default(PHRASE)
  description   String?
  content       String
  reportedCount Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  snippets      Snippet[]

  @@index([createdAt])
}

model Story {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  userId      Int
  sequences   Int[]
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@index([title, userId])
}

model Contact {
  id        Int      @id @default(autoincrement())
  userId    Int
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Snippet {
  id               Int       @id @default(autoincrement())
  type             FrameType @default(PHRASE)
  notes            String?
  frameId          Int
  frame            Frame     @relation(fields: [frameId], references: [id])
  originSequenceId Int
  createdById      Int
  createdBy        User      @relation(fields: [createdById], references: [id])
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  sequenceId       Int?

  @@index([createdById])
  @@index([originSequenceId])
}

enum FrameType {
  PHRASE
  IMAGE
  VIDEO
  AUDIO
  DOCUMENT
}

enum Visibility {
  PUBLIC
  PRIVATE
  FRIENDS_ONLY
}

enum ReportReason {
  SPAM
  INAPPROPRIATE
  COPYRIGHT
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  ACTION_TAKEN
}

enum Role {
  USER
  MODERATOR
  ADMIN
}

enum Engine {
  CHESS
  GO
}
